<% if @line_item.persisted? %>
  $("li[data-id='<%= @line_item.id %>']").replaceWith("<%= j render @line_item %>");
<% else %>
  $("li[data-id='<%= @line_item.id %>']").remove();
<% end %>

$(".grand-total").text("<%= number_to_currency(current_cart.total_price * 1.06) %>");

<% if current_cart.line_items.size.zero? %>
  $(".cart").replaceWith("<%= j render current_cart %>");
<% end %>
