<%= form_for([@user, @address]) do |f| %>
  <% if @address.errors.any? %>
    <div id="error_explanation">
      <% @address.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

    <div>
      <div id="fn-container">
        <%= f.text_field :first_name, placeholder: "First Name" %>
      </div>

      <div id="ln-container">
        <%= f.text_field :last_name, placeholder: "Last Name" %>
      </div>
    </div>

    <%= f.text_field :street_address1, placeholder: "Street Address 1" %>

    <%= f.text_field :street_address2, placeholder: "Street Address 2" %>

    <div id="city-container">
      <%= f.text_field :city, placeholder: "City" %>
    </div>

    <div id="state-container">
      <%= f.select :state, Address::US_STATES, prompt: 'State' %>
    </div>

    <div id="zip-container">
      <%= f.text_field :zipcode, placeholder: "Zip / Postal" %>
    </div>

    <%= f.text_field :phone_number, placeholder: "Phone Number" %>

    <div class="layout horizontal center-justified">
      <div class="submit-container2">
        <%= f.submit %>
      </div>
    </div>
<% end %>
