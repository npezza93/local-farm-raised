<div style="box-sizing: border-box;width: auto;margin: auto;max-width: 1080px;padding: 50px 34px 100px 34px;" class="layout vertical">
  <h2 style="text-align:center;">Log in</h2>

  <div class="layout horizontal center-justified">
    <div style="width:350px;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>

        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

        <% if devise_mapping.rememberable? -%>
          <div class="layout horizontal center-justified center">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="layout horizontal center-justified">
          <div class="submit-container2">
            <%= f.submit "Log in" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="layout horizontal center-justified flex">
    <%= link_to "Forgot your password?", new_password_path(resource_name), id: "back-to-home", style: "margin-bottom:20px;" %>
  </div>
</div>
