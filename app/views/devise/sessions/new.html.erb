<div class="outside-container layout vertical">
  <h2>Log in</h2>

  <div class="layout horizontal center-justified">
    <div style="width:300px;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
          <label class="mdl-textfield__label" for="user_email">Email</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.password_field :password, class: "mdl-textfield__input" %>
          <label class="mdl-textfield__label" for="user_password">Password</label>
        </div>


        <% if devise_mapping.rememberable? %>
          <div class="layout horizontal center-justified">
            <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="user_remember_me" style="width:131px;">
              <%= f.check_box :remember_me, class: "mdl-checkbox__input" %>
              <span class="mdl-checkbox__label">Remember me</span>
            </label>
          </div>
        <% end %>

        <div class="layout horizontal center-justified">
          <div class="submit-container2">
            <%= f.submit "Log in" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="layout horizontal center-justified flex">
    <%= link_to "Forgot your password?", new_password_path(resource_name), id: "forgot" %>
  </div>
</div>
