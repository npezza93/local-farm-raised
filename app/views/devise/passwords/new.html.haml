.container.layout.vertical.center
  %h2 Forgot your password?
  = form_for resource, as: resource_name, url: password_path(resource_name),
      builder: FormBuilder, html: { method: :post } do |f|
    .layout.vertical.center.w-100
      = f.email_field :email, autofocus: true, required: true
      .mt-2= f.submit "Send password reset"
