<div style="box-sizing: border-box;width: auto;margin: auto;max-width: 1080px;padding: 50px 34px 100px 34px;" class="layout vertical">
  <h2 style="text-align:center;">Sign up</h2>

  <div class="layout horizontal center-justified">
    <div style="width:350px;">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>

        <%= f.password_field :password, autocomplete: "off", placeholder: "Password " + ( "(" + @minimum_password_length.to_s + " characters minimum)") if @minimum_password_length %>

        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>

        <div class="layout horizontal center-justified">
          <div class="submit-container2">
            <%= f.submit "Sign up" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
