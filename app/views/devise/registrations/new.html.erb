<div class="outside-container layout vertical">
  <h2>Sign up</h2>

  <div class="layout horizontal center-justified">
    <div style="width:300px;">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :name, autofocus: true, class: "mdl-textfield__input" %>
          <label class="mdl-textfield__label" for="user_email">Name</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
          <label class="mdl-textfield__label" for="user_email">Email</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.password_field :password, class: "mdl-textfield__input" %>
          <label class="mdl-textfield__label" for="user_password"><%= "New password" + ( " (" + @minimum_password_length.to_s + " characters minimum)") if @minimum_password_length %></label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
          <label class="mdl-textfield__label" for="user_password_confirmation">Confirm new password</label>
        </div>

        <div class="layout horizontal center-justified">
          <div class="submit-container2">
            <%= f.submit "Sign up" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
