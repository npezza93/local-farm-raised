<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :post, @post do |ff| %>
    <div class="mdl-textfield mdl-js-textfield" style="width: 100%;">
      <%= ff.text_field :title, class: "mdl-textfield__input", style: "font-size:2.5em;" %>
      <label class="mdl-textfield__label" for="recipe_post_attributes_title" style="font-size:2.5em;">Title</label>
    </div>

    <%= ff.text_area :content %>
  <% end %>

  <div class="layout horizontal center-justified">
    <div class="submit-container2">
      <%= f.submit @submit_text %>
    </div>
  </div>
<% end %>
