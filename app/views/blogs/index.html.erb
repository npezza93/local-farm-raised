<div class="outside-container layout vertical center">
  <% @blogs.each do |blog| %>
    <div style="margin-bottom:136px;">
      <div style="max-width: 37em;margin: auto;text-align: center;">
        <p><%= blog.created_at.strftime("%B %-d, %Y") %></p>
        <%= link_to blog, class: "recipe-title" do %>
          <h1><%= blog.post.title %></h1>
        <% end %>
      </div>

      <div id="post-content">
        <%= (truncate(blog.post.content, :separator => '[---MORE---]', :length => 600, :escape => false)) %>
      </div>
      <%= link_to blog, class: "recipe-read-more" do %>
        Read More
      <% end %>

      <div class="layout center-justified horizontal around-justified" style="margin:auto;margin-top:3em;width:30em;">
        <%= link_to blog, class: "layout horizontal center comment-link" do %>
          <i class="material-icons" style="margin-right:8px;font-size:1em;">mode_comment</i>
          Comment
        <% end %>

        <%= link_to blog, class: "layout horizontal center comment-link" do %>
          <svg style="width:15px;height:15px;margin-right:8px;" viewBox="0 0 24 24">
            <path fill="#000000" d="M12,21.35L10.55,20.03C5.4,15.36 2,12.27 2,8.5C2,5.41 4.42,3 7.5,3C9.24,3 10.91,3.81 12,5.08C13.09,3.81 14.76,3 16.5,3C19.58,3 22,5.41 22,8.5C22,12.27 18.6,15.36 13.45,20.03L12,21.35Z" />
          </svg>
          0 likes
        <% end %>

        <%= link_to blog, class: "layout horizontal center comment-link" do %>
          <i class="material-icons" style="margin-right:8px;font-size:1em;">share</i>
          share
        <% end %>
      </div>
    </div>
  <% end %>

  <%= will_paginate @blogs %>
</div>

<% content_for :search do %>
  <%= form_tag blogs_path, method: :get do %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable" style="margin-top:-2px;color:#fff;">
      <label class="mdl-button mdl-js-button mdl-button--icon" for="search-expandable">
        <i class="material-icons">search</i>
      </label>
      <div class="mdl-textfield__expandable-holder">
        <%= text_field_tag :search, params[:search], class: "mdl-textfield__input", id: "search-expandable" %>
        <label class="mdl-textfield__label" for="search-expandable"></label>
      </div>
    </div>
  <% end %>
<% end %>

<% if current_user.try(:admin?) %>
  <%= link_to new_blog_path do %>
    <button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored fab">
      <i class="material-icons">add</i>
    </button>
  <% end %>
<% end %>
