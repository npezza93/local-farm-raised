<div class="layout horizontal center-justified flex" style="z-index:100;height: 25px;position: absolute;width: 100%;margin-top: 30px;">
  <%= link_to orders_path, {id: "back-to-home"} do %>
    <span class="back-arrow">‚Üê</span>
    Back to Orders
  <% end %>
</div>

<div style="height:100%;width:100%;background-color:#f3f3f3;margin-top:-15px;" >
  <div style="position: relative;margin: 0 auto;width: 900px;padding: 45px 15px;" class="layout horizontal">
    <div style="width:360px;margin-bottom: 30px;background: #fff;padding: 30px;margin-right:30px;margin-top:30px;">
        <p style="font-size: 16px;color: #333;height: 20px;font-weight:500;margin-bottom:30px;">Contact & Shipping</p>

        <div style="font-size:13px;font-weight:bold;margin-top:30px;">
          Shipping Address
        </div>

        <div>
          <div id="fn-container">
            <%= text_field_tag :first_name, @order.address.first_name, disabled: true %>
          </div>

          <div id="ln-container">
            <%= text_field_tag :last_name, @order.address.last_name, disabled: true %>
          </div>
        </div>

        <%= text_field_tag :street_address1, @order.address.street_address1, disabled: true %>

        <%= text_field_tag :street_address2, @order.address.street_address2, disabled: true %>

        <div id="city-container">
          <%= text_field_tag :city, @order.address.city, disabled: true %>
        </div>

        <div id="state-container">
          <%= text_field_tag :state, @order.address.state, disabled: true %>
        </div>

        <div id="zip-container">
          <%= text_field_tag :zipcode, @order.address.zipcode, disabled: true %>
        </div>


    </div>
    <div style="margin-top:30px;">
      <div style="height:100%;width:360px;margin-bottom: 30px;background: #fff;padding: 30px;" id="order-summary">
        <%= render @order %>
      </div>
      <div class="layout horizontal center-justified" style="width:100%;">
        <%= link_to 'Modify', edit_order_path(@order), id: "submit-order", style: "margin-right:10px;margin-left:0;" %>
        <%= button_to 'Cancel', order_path(@order), method: :delete, data: { confirm: 'Are you sure?' }, id: "submit-order" %>
      </div>
    </div>
  </div>
</div>
