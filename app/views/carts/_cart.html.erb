<div>Your Cart</div>

<% if !cart.line_items.empty? %>
  <table id="cart-table">
    <tr>
      <td class="item-th">Item</td>
      <td class="quantity-th">Quantity</td>
      <td class="price-th">Price</td>
      <td></td>
    </tr>
    <%= render (cart.line_items) %>
  </table>

  <div id="cart-summaries">
    <div class="summary-total-container layout horizontal">
      <div class="summary-total-header">SUBTOTAL</div>
      <div class="summary-total-price"><%= number_to_currency(cart.total_price) %></div>
    </div>

    <div class="summary-total-container layout horizontal">
      <div class="summary-total-header">TAX</div>
      <div class="summary-total-price"><%= number_to_currency(cart.total_price * 0.06) %></div>
    </div>

    <div class="summary-total-container layout horizontal">
      <div class="summary-total-header">Shipping</div>
      <div class="summary-total-price"><%= number_to_currency(0) %></div>
    </div>

    <div class="grand-total">
        <div class="grand-total-price"><%= number_to_currency(cart.total_price * 1.06) %></div>
        <div class="grand-total-header">GRAND TOTAL</div>
    </div>
  </div>
<% else %>
  <div class="layout horizontal center-justified empty-cart">
    Your shopping cart is currently empty
  </div>
<% end %>
